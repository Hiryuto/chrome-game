{
  "name": "chrome RPG",
  "version": "0.0.1",
  "version_name": "0.0.1",
  "manifest_version": 3,
  "description": "ブラウザ上で遊べるRPG",
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": ["https://raw.githubusercontent.com/Hiryuto/chrome-rpg-notification/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ゲーム画面を開く",
    "default_popup": "index.html"
  }
}
